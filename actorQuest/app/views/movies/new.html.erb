<h1>New Movie!</h1>

<%= form_for @movie do |f| %>
  <%= f.text_field :name, placeholder: "Name" %><br>
  <%= f.text_field :year, placeholder: "Year" %><br>
  <%= f.text_area :blurb, placeholder: "Description" %><br>
  <%= f.text_field :director, placeholder: "Director" %><br>
  <%= f.submit %>
<% end %>
