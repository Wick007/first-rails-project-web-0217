<h1>Make a new Character, dude!</h1>

<%= form_for @character, method: "patch" do |f| %>
  <%= f.text_field :name, placeholder: "Name" %><br>
  <%= f.text_area :bio, placeholder: "Bio" %><br>
  <%= f.collection_select :actor_id, Actor.all, :id, :name %><br>
  <%= f.collection_select :movie_id, Movie.all, :id, :name %><br>
  <%= f.submit %><br>
<% end %>
